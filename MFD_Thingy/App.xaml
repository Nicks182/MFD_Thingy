<Application x:Class="MFD_Thingy.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MFD_Thingy"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Thickness x:Key="PanelMargin">5,5,5,0</Thickness>
            <Thickness x:Key="TopMargin">0,5,0,0</Thickness>
            <Thickness x:Key="LeftMargin">5,0,0,0</Thickness>
            <Thickness x:Key="RightMargin">0,0,5,0</Thickness>
            <Thickness x:Key="BottomMargin">0,0,0,5</Thickness>
            <Thickness x:Key="BottomRightMargin">0,0,5,5</Thickness>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/APP/Theme/DarkTheme.xaml"/>
                <ResourceDictionary Source="/APP/Theme/DarkTheme_DataGrid.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/ColorPicker;component/Styles/DefaultColorPickerStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            
            
        </ResourceDictionary>

        
    </Application.Resources>
</Application>
